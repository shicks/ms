{
  "compilerOptions": {
    "lib": ["dom", "es2022"],
    "allowJs": false,
    "target": "es2022",
    "inlineSourceMap": true,
    "inlineSources": true,
    // "module": "bundler",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noEmit": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
  },
  "exclude": [
    "unused/*.ts",
    "scraps/*.ts",
  ]
}
